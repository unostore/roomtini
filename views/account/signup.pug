    //
      Document Title
      =============================================
    title Sign up | Roomtini
    body.stretched
  
    //
      Document Wrapper
      =============================================
    #wrapper.clearfix
      //
        Header
        =============================================
      header#header.full-header.transparent-header.border-full-header.dark.static-sticky(data-sticky-class='not-dark', data-sticky-offset='full', data-sticky-offset-negative='100')
        #header-wrap
          .container.clearfix
            #primary-menu-trigger
              i.icon-reorder
            //
              Logo
              =============================================
            #logo
              a.standard-logo(href='/', data-dark-logo='new/roomtini_logo.png')
                img(src='new/roomtini_logo.png', alt='Roomtini Logo')
              a.retina-logo(href='/', data-dark-logo='/new/roomtini_logo_dark.png')
                img(src='new/roomtini_logo.png', alt='Roomtini Logo')
            // #logo end
            //
              Primary Navigation
              =============================================
            nav#primary-menu
              ul.one-page-menu(data-easing='easeInOutExpo', data-speed='1250', data-offset='65')
                li
                  a(href='/', data-href='#wrapper')
                    div Home
                li
                  a(href='/', data-href='https://roomtini.com/#section-first_para')
                    div About
                li
                  a(href='/locations', data-href='#section-locations')
                    div Locations
                li
                  a(href='/#section-faqs', data-href='/#section-faqs')
                    div FAQ
                if !user
                  li(class=(title == 'Login') ? 'active' : undefined)
                    a(href='/login') 
                      div Sign In
                else    
                  li.sub-menu
                    a(href='#')
                      div='' + ((user.profile && user.profile.name) || user.email || user.id)
                    ul(style='display: none')
                      li
                        a.sf-with-ul(href='/account')
                          div My account
                      li
                        a.sf-with-ul(href='/logout')
                          div Logout
                li
                  a(href='/signup') Apply Now
                #side-panel-trigger.side-panel-trigger
                  a(href='#')
                    i.icon-reorder
            // #primary-menu end
      // #header end

        Slider
        =============================================
      section#slider.slider-parallax.full-screen.force-full-screen
        .slider-parallax-inner
          .full-screen.force-full-screen.dark.section.nopadding.nomargin.noborder.ohidden(style="background-image: url('images/signup.jpg'); background-size: cover; background-position: center center;")

              i.icon-angle-down.infinite.animated.fadeInDown
      // #slider end
      //
        Content
        =============================================

      section#content
        .content-wrap
          .container.clearfix
            .accordion.accordion-lg.divcenter.nobottommargin.clearfix(style='max-width: 550px;')
              .row
                .col-md-12
                  if messages.errors
                    .alert.alert-danger.fade.in
                      button.close(type='button', data-dismiss='alert')
                        i.fa.fa-times-circle-o
                      for error in messages.errors
                        div= error.msg
                  if messages.info
                    .alert.alert-info.fade.in
                      button.close(type='button', data-dismiss='alert')
                        i.fa.fa-times-circle-o
                      for info in messages.info
                        div= info.msg
                  if messages.success
                    .alert.alert-success.fade.in
                      button.close(type='button', data-dismiss='alert')
                        i.fa.fa-times-circle-o
                      for success in messages.success
                        div= success.msg  
              .acctitle
                i.acc-closed.icon-user4
                i.acc-open.icon-ok-sign
                | New Signup? Register for an Account
              .acc_content.clearfix
                form#register-form.nobottommargin(name='register-form', action='#', method='POST')
                  input(type='hidden', name='_csrf', value=_csrf)
                  .col_full
                    label(for='email') Email Address:
                    input.form-control(type='email', name='email', placeholder='Email', autofocus, required)
                  .col_full
                    label(for='password') Choose Password:
                    input.form-control(type='password', name='password', id='password', placeholder='Password', required)
                  .col_full
                    label(for='confirmPassword') Re-enter Password:
                    input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', required)
                  .col_full.nobottommargin
                    button#register-form-submit.button.button-3d.button-black.nomargin(name='register-form-submit', value='register', type='submit' ) Register Now
              .acctitle
                i.acc-closed.icon-lock3
                i.acc-open.icon-unlock
                | Login to your Account
              .acc_content.clearfix(id='test')
                form#login-form.nobottommargin(name='login-form', action='/login', method='post')
                  input(type='hidden', name='_csrf', value=_csrf)                
                  .col_full
                    label(for='login-form-username') Username:
                    input.form-control(type='email', name='email')
                  .col_full
                    label(for='login-form-password') Password:
                    input.form-control(type='password', name='password')
                  .col_full.nobottommargin
                    button#login-form-submit.button.button-3d.button-black.nomargin(name='login-form-submit', value='login') Login
                    a.fright(href='#') Forgot Password?
      // #content end
      //

